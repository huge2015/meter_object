                    <option for="data_source" value="googlesheet" hideRow="true">data_input_url</option>
                    <option for="chart_type" value="combo_chart" hideRow="true">target_line</option>
                    <option for="chart_type" value="bar_chart" hideRow="true">hAxis_chart_options</option>
                </field>
				<field type="japanel" path="modules/mod_jagooglechart/asset/elements/" />
